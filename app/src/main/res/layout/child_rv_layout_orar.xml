<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_child_item"
            android:layout_width="130dp"
            android:layout_height="180dp"
            app:cardCornerRadius="17dp">

            <TextView
                android:id="@+id/cv_child_item_tv_Materie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-70dp"
                android:text="@string/materie"
                android:textSize="16dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/cv_child_item_tv_startTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginStart="17dp"
                android:padding="2dp"
                android:textStyle="bold"
                android:text="10:56" />

            <TextView
                android:id="@+id/cv_child_item_tv_endTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
               android:layout_marginStart="70dp"
                android:padding="2dp"
                android:textStyle="bold"
                android:text="11:56" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginStart="5dp"
                android:padding="2dp"
                android:text="Sala:" />
            <TextView
                android:id="@+id/cv_child_item_tv_sala"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginStart="37dp"
                android:textStyle="bold"
                android:padding="2dp"
                android:text="Salaaaaa" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_marginStart="5dp"
                android:padding="2dp"
                android:text="Prof:" />
            <TextView
                android:id="@+id/cv_child_item_tv_profesor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_marginStart="37dp"
                android:textStyle="bold"
                android:padding="2dp"
                android:text="Profesor" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>