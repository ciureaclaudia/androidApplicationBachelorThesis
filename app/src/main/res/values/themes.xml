<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Licenta" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lavander</item>
        <item name="colorPrimaryVariant">@color/lavander</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>

    </style>
    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/cerc</item>
    </style>

    <style name="CoolWelcomeTextStyle">
        <item name="android:textColor">#6B6CE6</item> <!-- Change text color to a vibrant pink -->
        <item name="android:textSize">24sp</item> <!-- Change text size to 24sp -->
        <item name="android:textStyle">bold</item> <!-- Set text style to bold -->
        <item name="android:shadowColor">#fffafa</item> <!-- Add a semi-transparent black shadow -->
        <item name="android:shadowDx">10</item> <!-- Set horizontal shadow offset -->
        <item name="android:shadowDy">10</item> <!-- Set vertical shadow offset -->
        <item name="android:shadowRadius">10</item> <!-- Set shadow blur radius -->
    </style>


</resources>